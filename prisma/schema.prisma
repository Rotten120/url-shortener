generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Visitor {
  id        String      @id @default(uuid()) @db.Uuid
  cookieId  String      @unique
  createdAt DateTime    @default(now())
  urls      Url[]

  @@index([cookieId])
  @@map("visitor")
}

model Url {
  id        String      @id @default(uuid()) @db.Uuid
  origUrl   String
  shortCode String      @unique
  createdAt DateTime    @default(now())

  visitorId String?
  visitor   Visitor?    @relation(fields: [visitorId], references: [cookieId], onDelete: Cascade)

  @@index([shortCode])
  @@map("url")
}
